<div class="modal fade" id="day-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="day-modal-label"><%= "#{date.day}일의 영화" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ..loading
      </div>
      <div class="modal-footer">
        <%= form_with url: movies_path, model: Movie.new do |f|%>
          <div class="input-group mb-3">
            <%= f.text_field(:title, class: "form-control", placeholder: "제목") %>
            <%= f.hidden_field(:reserved_date, value: date) %>
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" type="submit">
                <i class="fas fa-plus"></i>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
